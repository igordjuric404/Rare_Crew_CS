<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rare_Crew_CS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Rare_Crew_CS.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <div role="main" class="app-container">
        <div>
            <a href="@Url.Action("Index", "Employee", new { sortOrder = ViewBag.CurrentSortOrder == "asc" ? "desc" : "asc" })" class="btn sorting-button">
                @if (ViewBag.CurrentSortOrder == "asc")
                {
                    <span>Sort Descending</span>
                }
                else
                {
                    <span>Sort Ascending</span>
                }
            </a>
        </div>
        <div class="data-container">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
